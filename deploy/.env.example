# 基于大模型的自然语言转SQL查询工具 - 环境变量配置

# DeepSeek API配置（可选，使用DeepSeek模型时需要）
DEEPSEEK_API_KEY=your_deepseek_api_key

# 智谱AI API配置（可选，使用智谱AI模型时需要）
ZHIPU_API_KEY=your_zhipu_api_key

# Ollama配置（可选，使用本地Ollama模型时需要）
OLLAMA_MODEL=llama3:8b
OLLAMA_URL=http://localhost:11434

# 数据库配置
DATABASE_PATH=src/data/library.db

# Streamlit配置
STREAMLIT_PORT=8505
STREAMLIT_ADDRESS=0.0.0.0

# 应用配置
APP_NAME=基于大模型的自然语言转SQL查询工具
DEBUG_MODE=False